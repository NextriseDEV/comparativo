    <script>
        lucide.createIcons();

        const ctx = document.getElementById('costChart').getContext('2d');
        const labels = ['Mês 1', 'Mês 3', 'Mês 6', 'Mês 9', 'Mês 12'];
        
        const rdData = [1839, 5517, 11034, 16551, 22068];
        const umblerData = [934, 2802, 5604, 8406, 11208];

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'RD Station',
                        data: rdData,
                        borderColor: '#06b6d4',
                        backgroundColor: 'transparent',
                        borderWidth: 3,
                        tension: 0,
                        pointBackgroundColor: '#06b6d4'
                    },
                    {
                        label: 'Umbler Talk',
                        data: umblerData,
                        borderColor: '#eab308',
                        backgroundColor: 'transparent',
                        borderWidth: 3,
                        tension: 0,
                        pointBackgroundColor: '#eab308'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top', align: 'center' }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'R$ ' + value.toLocaleString();
                            }
                        },
                        grid: { color: '#f1f5f9' }
                    },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>
